{
  "project": {
    "name": "LGBTQ Center Client Automation",
    "description": "Client follow-up automation system for Cleveland LGBTQ Center - Firebase hosted",
    "repository": "https://github.com/Uptonr3421/Alignment-AI-Client-Follow-up-tool",
    "branch": "main",
    "type": "full-stack",
    "framework": "react-vite-firebase"
  },
  "architecture": {
    "frontend": {
      "path": "src/web/frontend",
      "framework": "React 18 + Vite",
      "styling": "Tailwind CSS",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "entryPoint": "index.html"
    },
    "backend": {
      "path": "functions",
      "runtime": "nodejs20",
      "triggers": ["http", "firestore", "scheduled"],
      "entryPoint": "src/index.ts"
    },
    "database": {
      "type": "firestore",
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json",
      "collections": ["clients", "emailSequences", "templates", "settings", "users"]
    },
    "hosting": {
      "spa": true,
      "public": "dist",
      "rewrites": [
        {"source": "/api/**", "function": "api"},
        {"source": "**", "destination": "/index.html"}
      ]
    }
  },
  "features": {
    "authentication": {
      "provider": "firebase-auth",
      "methods": ["email-password", "google-oauth"],
      "note": "Enable Email/Password in Firebase Console after deployment"
    },
    "emailAutomation": {
      "provider": "gmail-api",
      "sequences": ["welcome", "reminder", "noshow", "reengagement"],
      "oauthRequired": true,
      "note": "Requires Google Cloud OAuth credentials post-deploy"
    },
    "scheduledFunctions": {
      "enabled": true,
      "schedule": "every 5 minutes",
      "function": "processScheduledEmails",
      "purpose": "Process pending emails automatically",
      "note": "Uses App Engine cron syntax, supported by Firebase Cloud Scheduler"
    }
  },
  "deployment": {
    "buildSteps": [
      "npm install",
      "cd functions && npm install && cd ..",
      "cd src/web/frontend && npm install && cd ../../..",
      "npm run build:firebase"
    ],
    "deployCommand": "firebase deploy",
    "environmentVariables": [
      "VITE_FIREBASE_API_KEY",
      "VITE_FIREBASE_AUTH_DOMAIN",
      "VITE_FIREBASE_PROJECT_ID",
      "VITE_FIREBASE_STORAGE_BUCKET",
      "VITE_FIREBASE_MESSAGING_SENDER_ID",
      "VITE_FIREBASE_APP_ID"
    ],
    "functionsConfig": [
      "gmail.client_id",
      "gmail.client_secret"
    ],
    "postDeploy": [
      "Enable Firebase Authentication (Email/Password)",
      "Create OAuth credentials in Google Cloud Console",
      "Enable Gmail API",
      "Set functions config: firebase functions:config:set gmail.client_id=... gmail.client_secret=...",
      "Redeploy functions: firebase deploy --only functions"
    ]
  },
  "targetUser": {
    "organization": "Cleveland LGBTQ Center",
    "technicalLevel": "non-technical",
    "setupRequirement": "zero-config",
    "note": "Staff should not need technical knowledge to use"
  },
  "freeTier": {
    "hosting": "10 GB transfer/month",
    "firestore": "50K reads/day, 20K writes/day, 1 GB storage",
    "functions": "2M invocations/month, 400K GB-seconds",
    "authentication": "Unlimited users",
    "gmail": "1B quota units/day (~10K emails)",
    "estimatedCapacity": "500-1000 clients, 300+ emails/day"
  },
  "standards": {
    "colors": {
      "primary": "#E6511A",
      "dark": "#252422",
      "light": "#f5f5f5"
    },
    "accessibility": "WCAG 2.1 AA",
    "typescript": "strict mode",
    "license": "MIT"
  },
  "agents": {
    "instructions": [
      "Use existing component patterns in src/web/frontend/src/components/",
      "Follow Firestore security rules - users can only access their own data",
      "Add loading states and error handling for all async operations",
      "Use Firebase SDK v9+ modular syntax",
      "Maintain zero-config philosophy - no manual setup required for users",
      "All dependencies must be within Firebase free tier",
      "No AI/ML services unless included in free tier",
      "Use Gmail API for email sending (free)"
    ]
  }
}
