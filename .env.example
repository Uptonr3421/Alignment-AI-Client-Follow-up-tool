# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials

# ============================================================================
# SMTP Email Configuration
# ============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-specific-password

# Email sending configuration
EMAIL_FROM_NAME=Cleveland LGBTQ Center
EMAIL_FROM_ADDRESS=noreply@lgbtqcleveland.org
EMAIL_REPLY_TO=contact@lgbtqcleveland.org

# ============================================================================
# Database Configuration
# ============================================================================

# For SQLite (desktop and simple web deployments)
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/lgbtq-center.db

# For PostgreSQL (production web deployments)
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://username:password@localhost:5432/lgbtq_center

# ============================================================================
# Web App Configuration
# ============================================================================

# Server port
PORT=3000

# Node environment
NODE_ENV=development

# Session secret (generate a strong random string for production)
SESSION_SECRET=change-this-to-a-random-string-in-production

# JWT secret for API authentication
JWT_SECRET=change-this-to-another-random-string

# JWT expiration (24 hours)
JWT_EXPIRES_IN=86400

# ============================================================================
# Automation Settings
# ============================================================================

# Email timing (in hours/days)
REMINDER_HOURS_BEFORE=48
NO_SHOW_HOURS_AFTER=4
RE_ENGAGEMENT_DAYS_AFTER=7

# Email sending window (24-hour format)
SEND_TIME_START=09:00
SEND_TIME_END=17:00

# Skip weekends and holidays
SKIP_WEEKENDS=true
SKIP_HOLIDAYS=true

# ============================================================================
# Security Settings
# ============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:1420

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ============================================================================
# Branding
# ============================================================================

CENTER_NAME=Cleveland LGBTQ Center
PRIMARY_COLOR=#E6511A
SECONDARY_COLOR=#252422
CENTER_PHONE=216-555-0100
CENTER_ADDRESS=6600 Detroit Ave, Cleveland, OH

# ============================================================================
# Optional: Analytics and Monitoring
# ============================================================================

# Email tracking (optional)
ENABLE_EMAIL_TRACKING=false

# Error reporting (optional)
# SENTRY_DSN=your-sentry-dsn

# ============================================================================
# Development Only
# ============================================================================

# Enable debug logging
DEBUG=false

# Disable email sending (for testing)
# DISABLE_EMAIL_SENDING=true
